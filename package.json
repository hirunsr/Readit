{
  "name": "Readit",
  "version": "0.0.9",
  "description": "Master Electron Course Project",
  "main": "main.js",
  "author": "Hirun",
  "homepage": "https://wonnapob.com",
  "scripts": {
    "start": "electron .",
    "mac": "electron-builder -m",
    "win": "electron-builder -w",
    "build": "electron-builder -mwl",
		"publish": "electron-builder build -w -p onTagOrDraft"
  },
  "build": {
    "appId": "com.stackacademy.readit",
    "directories": {
      "buildResources": "."
    },
    "mac": {
      "publish": [
        "github"
      ],
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
			"publish": [
        "github"
      ]
    },
    "linux": {
      "publish": [
        "github"
      ],
      "category": "Network"
    }
  },
  "dependencies": {
    "bulma": "^0.3.1",
    "electron-log": "^2.2.17",
    "electron-updater": "^3.1.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "query-string": "^6.1.0"
  },
  "devDependencies": {
    "electron-builder": "^20.28.1"
  }
}
